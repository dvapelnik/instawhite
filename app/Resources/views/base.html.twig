<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/framework.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<div class="g">
    <div class="g-row">
        <div class="f-nav-bar">
            <div class="f-nav-bar-body">
                <div class="f-nav-bar-title">
                    <a href="#">InstaWhite</a>
                </div>
                <ul class="f-nav">
                    {% if app.session.get('is_logged') %}
                        {% set instagram = app.session.get('instagram') %}

                        {% dump(instagram.access_token) %}

                        <li>
                            <a href="{{ path('logout') }}">
                                Logout ({{ instagram.user.username }})
                            </a>
                        </li>
                    {% else %}
                        <li><a href="{{ path('login') }}">Login</a></li>
                    {% endif %}
                    <li><a href="{{ path('homepage') }}">Main page</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="g-row">
        <div class="g-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>


{% block javascripts %}{% endblock %}
</body>
</html>
